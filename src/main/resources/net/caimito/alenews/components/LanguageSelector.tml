<span id="languageSelection"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">
	<t:loop source="availableLanguages" value="language">
		<t:actionLink t:id="selectLanguage" context="language">
			<img src="${context:img/language-flags/32x32/}/${flagName}" />
		</t:actionLink>
	</t:loop>
</span>
